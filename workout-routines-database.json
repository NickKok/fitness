{
  "id": "workout_001",
  "name": "Knee Strengthening Protocol 2.0",
  "description": "Enhanced routine targeting knee stability through ankle mobility, VMO activation, and posterior chain strength.",
  "client": {
    "goals": ["Improve knee stability", "Strengthen posterior chain", "Enhance joint resilience"],
    "restrictions": ["Avoid excessive knee flexion if pain occurs"],
    "frequency": "3x/week"
  },
  "structure": {
    "warmup": {
      "exercises": [
        {
          "name": "Wall Ankle Mobilizations",
          "reps": "8 each side",
          "notes": "Hold 2 seconds at end-range"
        },
        {
          "name": "Heel Walks",
          "duration_sec": 30,
          "notes": "Focus on controlled steps"
        }
      ]
    },
    "circuit": {
      "rounds": 3,
      "exercises": [
        {
          "name": "Single Leg Glute Bridges",
          "reps": "10-12 per leg",
          "focus": ["glutes", "hamstrings"]
        },
        {
          "name": "Deadlift (Single Leg)",
          "reps": "10-12 per leg",
          "focus": ["hamstrings", "balance"]
        },
        {
          "name": "Standing Side Leg Raises",
          "reps": "20 per side",
          "focus": ["glutes", "abductors"]
        },
        {
          "name": "Single Leg Calf Raise",
          "reps": "10-15 per leg",
          "focus": ["calves", "ankle stability"]
        },
        {
          "name": "Quadruped Hip Extensions",
          "reps": "10-15 per leg",
          "focus": ["glutes", "core"]
        },
        {
          "name": "Static Lunge Pulse",
          "reps": "10-12 per leg",
          "focus": ["quads", "glutes"]
        },
        {
          "name": "Side Lunges",
          "reps": "10 per side",
          "focus": ["adductors", "quads"]
        },
        {
          "name": "Tip-Toe Squats",
          "reps": 10,
          "focus": ["calves", "quads"]
        },
        {
          "name": "Single-Leg Mini Squat Hold",
          "duration_sec": "10-15 per leg",
          "focus": ["VMO", "ankle stability"],
          "notes": "Add pulses if too easy"
        }
      ],
      "rest_between_rounds_sec": 60
    },
    "cooldown": {
      "exercises": [
        {
          "name": "Toe-to-Wall Tibialis Raises",
          "reps": 12,
          "focus": ["tibialis anterior"]
        },
        {
          "name": "Child's Pose",
          "duration_sec": 45,
          "notes": "Focus on deep breathing"
        }
      ]
    }
  },
  "notes": "Perform exercises in order. Modify reps if experiencing knee discomfort. The single-leg focus enhances stability while protecting joints."
}
